{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "images": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "registry": {
              "type": "string"
            },
            "purpose": {
              "type": "string"
            },
            "publisher": {
              "type": "string"
            },
            "sourceCode": {
              "type": "string"
            },
            "docker": {
              "type": "object",
              "properties": {
                "verifiedPublisher": {
                  "type": "boolean",
                  "default": false
                },
                "officialImage": {
                  "type": "boolean",
                  "default": false
                },
                "sponsoredOSS": {
                  "type": "boolean",
                  "default": false
                }
              }
            },
            "manualAnalysis": {
              "type": "object",
              "properties": {
                "contributors": {
                  "type": "integer"
                },
                "activity": {
                  "type": "object",
                  "properties": {
                    "commitFrequency": {
                      "type": "string"
                    },
                    "evidence": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "commitFrequency",
                    "evidence"
                  ]
                }
              },
              "required": [
                "contributors",
                "activity"
              ]
            },
            "comment": {
              "type": "string"
            },
            "openSSFScore": {
              "type": "number"
            },
            "review": {
              "type": "object",
              "properties": {
                "approvedImage": {
                  "type": "boolean"
                },
                "reason": {
                  "type": "string"
                }
              },
              "required": [
                "approvedImage",
                "reason"
              ]
            }
          },
          "required": [
            "registry",
            "purpose",
            "publisher",
            "sourceCode",
            "manualAnalysis",
            "openSSFScore",
            "review"
          ]
        }
      ]
    }
  },
  "required": [
    "images"
  ]
}